{% extends 'CaravaneEstateBundle:Backend:admin.html.twig' %}

{% block body -%}
  

    <table class="records_list  table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uri</th>
                <th>Content</th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('node_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.uri }}</td>
                <td>{{ entity.content|slice(0,200) }}</td>
                
                <td>
                    <a href="{{ path('node_edit', { 'id': entity.id }) }}"><span class="fa fa-edit"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


