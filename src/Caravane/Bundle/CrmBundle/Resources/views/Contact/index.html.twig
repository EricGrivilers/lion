{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Contact list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Password</th>
                <th>Email</th>
                <th>Language</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Tel</th>
                <th>Zip</th>
                <th>Fax</th>
                <th>Street</th>
                <th>Number</th>
                <th>City</th>
                <th>Country</th>
                <th>Company</th>
                <th>Salutation</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('_crm_contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.password }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.language }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.tel }}</td>
                <td>{{ entity.zip }}</td>
                <td>{{ entity.fax }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.company }}</td>
                <td>{{ entity.salutation }}</td>
                <td>{{ entity.date }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('_crm_contact_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('_crm_contact_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('_crm_contact_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
