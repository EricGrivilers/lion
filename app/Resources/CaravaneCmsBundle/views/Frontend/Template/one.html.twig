			<div class="container">



				{% include "CaravaneEstateBundle:Frontend:estate_detail.html.twig" %}



		</div>
	</aside>

	{% include "CaravaneCmsBundle:Frontend:Widget/twitter.html.twig" %}


{% endblock content %}
