{% extends "CaravaneCmsBundle::layout.html.twig" %}


{% block header %}
	<header class='page-header '>
		{#    MAIN MENU + SEARCH  #}
		{% embed "CaravaneCmsBundle:Menu:main.html.twig" %}
			{% block search_form %}
				{% include "CaravaneEstateBundle:Estate:search.html.twig" %}
			{% endblock search_form %}
		{% endembed %}
	</header>
{% endblock header %}

{% block content %}

		<!-- Content area 4 -->
	<aside class='wrapper border-tb-white '>
		<div class="container main" >
			<div class="row" id="list">
				{% include "CaravaneCmsBundle:Frontend:Template/rows.html.twig" %}
			</div>
			<div class="row" style="text-align: center">
				{% if estates|length>0 %}
				<a id="nextEstate" ><img src="{{asset('/bundles/caravanecms/img/loader.gif')}}" style="margin: 10px" /></a>
				{% else %}
					<div class="alert alert-info">
						{{"Aucun résulta ne correspond à votre requete"|trans}}
					</div>
				{% endif %}
			</div>
		</div>
	</aside>



{% endblock content %}


