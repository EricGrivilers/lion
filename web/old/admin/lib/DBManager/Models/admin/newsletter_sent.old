<?
	class newsletter_sent extends SQLTable {
		function newsletter_sent(&$Con) {
			parent::SQLTable($Con,"newsletters_sent","","id");			
		}
		
		function Save($params) {
			if ($params["id"]==0) {
				if (!isset($params["date_created"])) $params["date_created"] = date("Y-m-d H:i");
			}
			$params["date_updated"]=date("Y-m-d H:i");
			return parent::Save($params);
		}
	}
?>